                                </arguments>
                            </configuration>
                        </execution>
                        <execution>
                            <id>npm-build-pc</id>
                            <goals>
                                <goal>exec</goal>
                            </goals>
                            <phase>initialize</phase>
                            <configuration>
                                <skip>${exec.skip}</skip>
                                <workingDirectory>${project.basedir}/src/main/node</workingDirectory>
                                <executable>npm</executable>
                                <arguments>
                                    <argument>run</argument>
                                    <argument>build</argument>
                                </arguments>
                            </configuration>
                        </execution>
                    </executions>
